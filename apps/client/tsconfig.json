{
  "extends": "@wepl/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@fsd/*": [
        "./src/*"
      ],
      "@ui/*": ["../../packages/ui/*"]

    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", "jest.setup.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
